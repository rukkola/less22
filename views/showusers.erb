<table class="table table-striped">
	<thead>
    <tr>
      <th scope="col">Имя</th>
      <th scope="col">Телефон</th>
      <th scope="col">Дата</th>
      <th scope="col">Барбер</th>
      <th scope="col">Цвет</th>
    </tr>
  </thead>
  <tbody>
		<% @results.each do |row| %>

			 <tr>
			 	<td><%= row['username'] %></td>
			 	<td><%= row['phone'] %></td>
			 	<td><%= row['datestamp'] %></td>
			 	<td><%= row['barber'] %></td>
			 	<td><%= row['color'] %></td>
			 </tr>

		<% end %>
	 </tbody>	
</table>